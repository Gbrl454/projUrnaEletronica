<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<VBox alignment="CENTER" focusTraversable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      minHeight="-Infinity" minWidth="-Infinity" spacing="25.0" style="-fx-background-color: #1B1E23;"
      stylesheets="@css/vwLogin.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gbrl.ue.controllers.ControllerLogin">
    <padding>
        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0"/>
    </padding>
    <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#isAdminLogin" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@imgs/logoJus.png"/>
    </ImageView>
    <TextField fx:id="tfUser" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
               minHeight="-Infinity" minWidth="-Infinity" promptText="Digite seu Nome / CPF ..." VBox.vgrow="ALWAYS">
        <font>
            <Font size="30.0"/>
        </font>
    </TextField>
    <TextField fx:id="tfSenha" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
               minHeight="-Infinity" minWidth="-Infinity" promptText="Digite sua Senha ..." VBox.vgrow="ALWAYS">
        <font>
            <Font size="30.0"/>
        </font>
    </TextField>
    <HBox alignment="CENTER" spacing="100.0">
        <Button fx:id="btnLogar" ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" onAction="#btnLogar" styleClass="btn" text="Logar">
            <font>
                <Font size="25.0"/>
            </font>
        </Button>
        <Button fx:id="btnCadastrar" ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" onAction="#btnCadastrar" styleClass="btn"
                text="Cadastrar">
            <font>
                <Font size="25.0"/>
            </font>
        </Button>
    </HBox>
    <Button fx:id="btnRecuperarSenha" ellipsisString="" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" mnemonicParsing="false" onAction="#btnRecuperarSenha" styleClass="btnRecuperar"
            text="Recuperar Senha">
        <font>
            <Font size="15.0"/>
        </font>
    </Button>
</VBox>
